<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.demosb.dao.AuthRoleDao">

    <resultMap type="com.neusoft.demosb.entity.AuthRole" id="AuthRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
    </resultMap>
<sql id="baseSql">
            id, role_id, menu_id
    </sql>
    <!--查询单个-->
    <select id="queryById" resultMap="AuthRoleMap">
        select
          <include refid="baseSql"></include>
        from stu.auth_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AuthRoleMap">
        select
           <include refid="baseSql"></include>
        from stu.auth_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AuthRoleMap">
        select
           <include refid="baseSql"></include>
        from stu.auth_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>



</mapper>